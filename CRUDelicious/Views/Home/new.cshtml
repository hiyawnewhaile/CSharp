@model Dish

<a href="/">Home</a>

<div class="text-center">Add a new Dish</div>
<div class="text-center">
    <form action="/new/add" method="post">
        <div class="form-group">
            <label for="Chef">Chef's Name</label>
            <input asp-for="Chef">
            <span asp-validation-for="Chef"></span>
        </div>
        <div class="form-group">
            <label for="Name">Name of Dish</label>
            <input asp-for="Name">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label for="Calories"># of Calories</label>
            <input asp-for="Calories">
            <span asp-validation-for="Calories"></span>
        </div>
        <div class="form-group">
            <label for="Calories">Tastiness</label>
            <select asp-for="Calories">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="Calories"></span>
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <input asp-for="Description">
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Add Dish" class="btn btn-info">
        </div>
    </form>
</div>