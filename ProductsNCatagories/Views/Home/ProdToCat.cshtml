@model Categorization

<h1 class="text-center">@ViewBag.ViewProd.Name</h1>
<div class="row">
    <div class="col-6">
        <h3>Categories:</h3>
        @foreach (Categorization a in ViewBag.ViewProd.CategoryBelongingTo)
        {
            <p>@a.Category.Name</p>
        }
    </div>
    <div class="col-6">
        <h3>Add Catagories:</h3>
        <form action="/addassoc" method="post">
        <input type="hidden" asp-for="ProductId" value="@ViewBag.ViewProd.ProductId">
        <select asp-for="CategoryId" class="form-control">
            @foreach (Category a in ViewBag.AdbleCat)
            {
                <option value="@a.CategoryId">@a.Name</option>
            }
        </select>
        <input type="submit" value="Add" class="btn btn-primary">
        </form>
    </div>
</div>