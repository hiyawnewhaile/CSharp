@model Categorization
<h1>@ViewBag.ViewCat.Name</h1>

<div class="row">
    <div class="col-6">
        <h3>Products:</h3>
        @foreach (Categorization a in ViewBag.ViewCat.ProductsBelongingToCatagory)
        {
            <p>@a.Product.Name</p>
        }
    </div>
    <div class="col-6">
        <h3>Add Product:
            <form action="/addprodassoc" method="post">
        <input type="hidden" asp-for="CategoryId" value="@ViewBag.ViewCat.CategoryId">
        <select asp-for="ProductId" class="form-control">
            @foreach (Product a in ViewBag.AdbleProd)
            {
                <option value="@a.ProductId">@a.Name</option>
            }
        </select>
        <input type="submit" value="Add" class="btn btn-primary">
        </form>
        </h3>
    </div>
</div>