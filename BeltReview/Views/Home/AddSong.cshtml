@model Song

<h1>Add a Song here</h1>
<form action="/song/add" method="post">
<div class="form-group">
    <label for="Title">Title</label>
    <input asp-for="Title" class="form-control">
    <span asp-validation-for="Title" class="text-danger"></span>
</div>
<div class="form-group">
    <label for="DurMin">Duraation</label>
    <input asp-for="DurMin" class="col-1">
    <span>:</span>
    <input asp-for="DurSec" class="col-1">
    <span asp-validation-for="DurMin" class="text-danger"></span>
    <span asp-validation-for="DurSec" class="text-danger"></span>
</div>
<div class="form-group">
    <label for="Genre">Genre</label>
    <select asp-for="Genre" class="form-control">
        <option value="Rock">Rock</option>
        <option value="Electronic">Electronic</option>
        <option value="Ska">Ska</option>
        <option value="Metal">Metal</option>
        <option value="Raggae">Raggae</option>
    </select>
</div>
<div class="form-group">
    <input type="submit" value="Add Song" class="btn btn-warning">
</div>
</form>