@{
    ViewData["Title"] = "Home Page";
}

@model Dish

<div class="text-center">
    <h1><a href="/">Chefs</a> | Dishes</h1>
</div>
<a href="/dishes/new">Add a Dish</a>
<div class="text-start">
    <h3>Yum, take a look at our tasty Dishes!</h3>
</div>
<div class="text-center">
    <table class="table table-striped">
        <thead>
            <th>Name</th>
            <th>Chef</th>
            <th>Tastiness</th>
            <th>Calories</th>
        </thead>
            @foreach (Dish d in ViewBag.AllDishes)
            {
        <tr>
                <td>@d.Name</td>
                <td>@d.Chef.FirstName @d.Chef.LastName</td>
                <td>@d.Tastiness</td>
                <td>@d.Calories</td>
        </tr>
            }
    </table>
</div>